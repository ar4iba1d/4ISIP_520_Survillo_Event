<Window x:Class="_4ISIP_520_Survillo_Event.Page.EditPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_4ISIP_520_Survillo_Event.Page"
        mc:Ignorable="d"
        Title="EditPage" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="name" Margin="0 100 0 10" Width="350" HorizontalAlignment="Center"/>
            <DatePicker x:Name="dpDate" Margin="0 0 0 10" Width="350" HorizontalAlignment="Center"/>
            <TextBox x:Name="days" Margin="0 0 0 10" Width="350" HorizontalAlignment="Center"/>
            <ComboBox x:Name="city" Margin="0 0 0 10" ItemsSource="{Binding FormOfEvents.FormOfEventName}" Width="350" HorizontalAlignment="Center"/>
            <Button Content="Сохранить" Click="btnSave_Click" Width="350" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
